# Gemfile
source "https://rubygems.org"

# Use Jekyll
gem "jekyll", "~> 4.3" # Use the latest 4.x version

# Use the github-pages gem for compatibility with GitHub Pages
# This includes Jekyll and many other gems used by GitHub Pages.
gem "github-pages", group: :jekyll_plugins

# If you don't want to use github-pages, you might need these explicitly:
# gem "jekyll-feed", "~> 0.12"
# gem "jekyll-sitemap", "~> 1.4"
# gem "jekyll-seo-tag", "~> 2.7"
# gem "minima", "~> 2.5"
# ... other plugins you use

group :jekyll_plugins do
  # Add other plugins here if needed
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  # gem 'jekyll-seo-tag' # Often included in github-pages
  # gem 'minima' # Theme gem, often included in github-pages if using it
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
# and associated library.
install_if -> { RUBY_PLATFORM =~ %r!mingw|mswin|java! } do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end

# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1.1", :install_if => Gem.win_platform?
